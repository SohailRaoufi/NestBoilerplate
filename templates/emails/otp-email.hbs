{{#> layout}}
<p style="font-size: 18px; font-weight: 600; margin-bottom: 16px; color: #1E293B;">
    Hello, {{fullName}}
</p>


<div style="background-color: #F5F9FF; border-radius: 10px; padding: 24px; margin-bottom: 24px; text-align: center;">
    <p style="font-size: 32px; font-weight: 700; letter-spacing: 8px; color: #0052CC; margin: 0; padding: 16px; background: white; border-radius: 8px; display: inline-block;">
        {{otpCode}}
    </p>
    <p style="color: #64748B; font-size: 14px; margin-top: 16px;">
        Code expires in {{expiryMinutes}} minutes
    </p>
</div>

<div style="background-color: #FEF3F2; border-radius: 10px; padding: 14px; margin-bottom: 24px; text-align: left; border-left: 3px solid #FCA5A5;">
    <p style="color: #991B1B; font-size: 14px; line-height: 1.5; margin: 0;">
        <strong>Security Notice:</strong> If you didn't request this verification code, please ignore this email or contact our support team immediately.
    </p>
</div>


{{/layout}}